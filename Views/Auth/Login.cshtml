@using SchoolProject.ViewModels

@model LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EduAdmin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/BasicDesign.css">
</head>
<body>
    <!-- Login Content -->
    <div class="auth-container">
        <div class="auth-card">
            <h2 class="auth-title">
                <i class="fas fa-graduation-cap"></i> Iniciar Sesión
            </h2>
            <form method="post" asp-action="Login" asp-controller="Auth">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Correo Electrónico</label>
                    <input type="email" class="form-control" name="email" placeholder="nombre@ejemplo.com" required>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Contraseña</label>
                    <input type="password" class="form-control" name="password" placeholder="••••••••" required>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="remember" name="remember">
                    <label class="form-check-label" for="remember">Recordarme</label>
                </div>
                <button type="submit" class="btn btn-submit">
                    Iniciar Sesión <i class="fas fa-sign-in-alt ms-2"></i>
                </button>
            </form>
            <div class="text-center mt-3">
                <a href="#" class="text-decoration-none text-primary-custom">¿Olvidaste tu contraseña?</a>
            </div>
            <div class="social-login">
                <button class="social-btn" type="button">
                    <i class="fab fa-google"></i> Google
                </button>
                <button class="social-btn" type="button">
                    <i class="fab fa-microsoft"></i> Microsoft
                </button>
            </div>
            <div class="text-center mt-4">
                <span class="text-muted">¿No tienes cuenta? </span>
                <a href="/Auth/Register" class="text-decoration-none text-primary-custom">Regístrate aquí</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
